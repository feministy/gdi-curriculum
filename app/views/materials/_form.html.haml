= form_for @material do |f|
  - if @material.errors.any?
    #error_explanation
      %h2= "#{pluralize(@material.errors.count, "error")} prohibited this material from being saved:"
      %ul
        - @material.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :chapter
    = f.text_field :chapter
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :language
    = f.text_field :language
  .actions
    = f.submit 'Save'
